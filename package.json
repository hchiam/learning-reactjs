{
  "name": "learning-react",
  "version": "1.0.0",
  "description": "Learning React",
  "main": "index.js",
  "scripts": {
    "lint": "eslint *.js --max-warnings=0",
    "fix": "eslint --fix *.js",
    "build": "babel index.js --out-file dist/index.js; babel form.js --out-file dist/form.js; npm run minify;",
    "minify": "minify dist/index.js > dist/index-minified.js; minify dist/form.js > dist/form-minified.js",
    "test": "jest --passWithNoTests",
    "start": ""
  },
  "author": "hchiam",
  "license": "MIT",
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "eslint": "^6.4.0",
    "eslint-config-google": "^0.14.0",
    "husky": "^3.0.9",
    "jest-cli": "^24.9.0",
    "minify": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "# npm run lint && npm test"
    }
  }
}
